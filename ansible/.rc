## == Ansible ================================================================
function ansible() {
    DOCKER_IMAGE=ansible
    DOCKER_RUN_OPTS="--rm -it -v ${HOME}/.ssh:/root/.ssh -v ${PWD}:${PWD} -w ${PWD} -e SCW_ACCESS_KEY -e SCW_SECRET_KEY -e SCW_TOKEN -e ANSIBLE_CONFIG -v ${HOME}/.ssh:/root/.ssh --entrypoint=ansible"
    if [ -n "$ZSH_VERSION" ]; then
        op run --env-file .env -- docker run ${=DOCKER_RUN_OPTS} ${=DOCKER_IMAGE} "$@"
    else
        op run --env-file .env -- docker run ${DOCKER_RUN_OPTS} ${DOCKER_IMAGE} "$@"
    fi
}

